@model ViewWebLogin
@{
    Layout = "~/Views/Shared/_WebLayout1.cshtml";
}

<section id="login">
    <div class="container">
        <div class="section-header">
            <h3>Đăng nhập</h3>
        </div>

        <div class="row text-center">
            <div class="col-md-6 mr-auto ml-auto">
                <div class="login-col-2">
                    <div class="login-form">
                        <form asp-action="Login" method="post">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <div class="form-group">
                                <label asp-for="Email" class="font-weight-bold text-white"></label>
                                <input asp-for="Email" class="form-control" required="required" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="font-weight-bold text-white"></label>
                                <input asp-for="Password" class="form-control" required="required" />
                            </div>
                            <div><button type="submit" onclick="Login()">Đăng nhập</button></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

